{{#if posts.length}}
<div class="container">
    <div class="card">
        <div class="row">

            <div class="col">
                <img src="https://www.fillmurray.com/200/300" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-10">
                <div class="card-body">
                    <h1 class="card-title">My Posts</h1>
                </div>
                <ul class="list-group list-group-flush">
                    {{#each posts as |post|}}
                    {{> dashboard-post post}}
                    {{/each}}
                </ul>
            </div>

        </div>
    </div>
</div>
{{/if}}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-auto">
            <a class="btn btn-primary" href="/dashboard/new" role="button">Create A New Post</a>
        </div>
    </div>
</div>