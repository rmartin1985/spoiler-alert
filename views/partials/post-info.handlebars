<div class="row">
    <div class="col align-self-center">
        <i class="fa fa-film center"></i>
    </div>
    <div class="col align-self-center">
        <h4><a class="link" href="/post/{{id}}">{{title}}</a></h4>
    </div>
    <div class="col align-self-center">
        {{#if comments.length}}
        <span>{{comments.length}} {{format_plural "comment" comments.length}}</span>
        {{else}}
        <span>No comments</span>
        {{/if}}
    </div>
    <div class="col align-self-center">
        <p>Posted by {{user.username}}
            <br>on {{format_date created_at}}
        </p>
    </div>
</div>